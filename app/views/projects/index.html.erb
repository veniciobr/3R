<div id="flash_messages">
  <% flash.each do |key, value| %>
  <div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= content_tag(:div, value, :class => "flash #{key}") %>
  </div>
  <% end %>   
</div>

<div class = "row">
  <div class="alert alert-info">  
    Create a unique, informative name for this analysis run. The name
    will appear in the Analysis Execution History on the Explore tab and
    should be a name that will distinguish it from the other analyses in
    your history.
  </div>
</div>

<div class = "row">
  <div class="col-sm-2 col-md-2">
    <!-- ****************************************** -->
  </div>
  <div class="col-sm-10 col-md-8 center">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading contains-buttons">
        <div class="panel-title">Analysis</div>
      </div>
      <div class="panel-body">

        <%= link_to '  New  ', new_project_path, :class => 'btn btn-primary btn-xs fa fa-plus'%>

        <div class="btn-group pull-right">
          <button type="button" class="btn btn-default">Group Actions</button>
          <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle"><span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">My Analysis</a></li>
            <li><a href="#">My Groups</a></li>
            <li class="divider"></li>
            <li><a href="#">Manage Groups</a></li>
          </ul>
        </div>

        <p></p> <!-- Line Space -->

        <!-- Table --> 
        <div class="table-responsive">  
          <table id="table"  class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Details</th>
                <th></th>
              </tr>
            </thead>
            <% @projects.each do |project| %>
            <tr>
              <td><%= project.title %></td>
              <td ><%= project.details %></td>
              <td width="130px">
                <%= link_to  "".html_safe, project, :class => 'btn btn-info fa fa-external-link'%>            
                <%= link_to "".html_safe, edit_project_path(project), :class => 'btn btn-primary fa fa-pencil'%>
                <%= link_to "".html_safe ,project_path(project),
                :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger fa fa-trash-o' %>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>